<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Sign In | Bootstrap Based Admin Template - Material Design</title>
    <!-- Favicon-->
    <link rel="icon" href="~/Assest/favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/Assest/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/Assest/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/Assest/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/Assest/css/style.css" rel="stylesheet">
    <style>
        img {
            margin-left: 100px;
            padding: 5px;
            width: 150px;
        }
    </style>
</head>

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <img src="~/Assest/signup_logo.png" />
        </div>
        <div class="card">
            <div class="body">

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">person</i>
                    </span>
                    <div class="form-line">
                        <input id="txtUserName" type="text" class="form-control" name="username" placeholder="Username or Email" required autofocus>
                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock</i>
                    </span>
                    <div class="form-line">
                        <input id="txtPassword" type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <button id="btnLogin" class="btn btn-block bg-pink waves-effect" type="submit">SIGN IN</button>
                    </div>
                </div>
                <div class="row m-t-15 m-b--20">
                    <div class="col-xs-6">
                        @Html.ActionLink("Register Now!", "SignUP", "SignUp")
                    </div>
                    <div class="col-xs-6 align-right">
                        <a href="forgot-password.html">Forgot Password?</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/Assest/plugins/jquery/jquery.min.js"></script>
   
    <script src="~/Assest/plugins/bootstrap-notify/bootstrap-notify.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/Assest/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/Assest/plugins/node-waves/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="~/Assest/plugins/jquery-validation/jquery.validate.js"></script>

    <!-- Custom Js -->
    <script src="~/Assest/js/admin.js"></script>
    <script src="~/Assest/js/pages/examples/sign-in.js"></script>
    <script src="~/PageScript/iSchoolApp.js"></script>

    <script>
        $(document).ready(function () {
            $("#btnLogin").click(function () {
                var loginModel = {
                    Email: $("#txtUserName").val(),
                    Password: $("#txtPassword").val(),
                };
                $.ajax({
                    type: 'Post',
                    url: '/Login/LoginRR',
                    data: loginModel,
                    success: function (resp) {
                        if(resp==true){
                            showNotification("success","Login Successful");
                           $(location).attr('href','/Home/Index');

                        }
                        else{
                            showNotification("danger","Invalid Email/Password");
                        }
                    }

                });

            });
        });
    </script>
</body>

</html>